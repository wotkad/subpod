#info3
	background-color #F8F8F8
.info3
	padding 60px 0
	display flex
	flex-wrap wrap
	&__blocks
		flex-basis 100%
		display flex
		justify-content space-between
		&:nth-child(1)
			border-bottom 1px solid #E9E9E9
			padding-bottom 40px
		&:nth-child(2)
			padding-top 40px
		&-item
			flex-basis 48%
			display flex
			transform translateY(20px)
			transition .2s
			opacity 0
			&-image
				flex-basis 20%
			&-content
				& > div:nth-child(1)
					flex-basis 80%
					padding-left 30px
				& > div:nth-child(2)
					flex-basis 80%
					padding-left 30px
				&-title
					margin-bottom 9px
					color $black
					font-family $SemiBold
					font-size 1.125rem
					line-height 26px
					& span
						&:nth-child(2)
							margin-left 3px
							color $blue
							font-family $SemiBold
							font-size 1.125rem
							line-height 26px
				&-text
					font-family $Regular
					font-size 0.825rem
					line-height 21px
					color $text
@media(max-width: 991px)
	.info3
		padding 40px 0
		&__blocks
			flex-wrap wrap
			&-item
				&:nth-child(1)
					flex-basis 100%
					margin-bottom 20px
				&:nth-child(2)
					flex-basis 100%
				&-content
					padding-left 20px
					& > div:nth-child(1)
						padding-left 0
					& > div:nth-child(2)
						padding-left 0
