.info2-bg
	position absolute
	top 0
	left calc(50% - 230px)
.info2
	padding 60px 0
	position relative
	&__blocks
		border 1px solid #efefef
		border-radius 5px
		display flex
		background-color $white
		box-shadow 0px 4px 50px rgba(0, 0, 0, 0.1)
		&-block
			flex-basis 50%
			&:nth-child(1)
				background-color $white
				padding 35px 40px
				transform translateY(20px)
				opacity 0
			&:nth-child(2)
				transform translateY(20px)
				opacity 0
			&-title
				font-family $SemiBold
				font-size 1.5rem
				line-height 35px
				color $black
				margin-bottom 15px
			&-number
				font-size 2.25rem
				color #D90E0E
				line-height 55px
				font-family $Medium
				margin-bottom 4px
			&-text
				font-size 1.125rem
				line-height 26px
				color $text
				font-family $Regular
				margin-bottom 21px
				&:last-child
					margin-bottom 0
			&-container
				&:nth-child(1)
					padding 20px 40px 20px 40px
					background $gradient
					display flex
					flex-wrap wrap
				&:nth-child(2)
					padding 15px 40px
					background $gradient-black
					display flex
					& > div:nth-child(1)
						flex-basis 80%
					& > div:nth-child(2)
						flex-basis 20%
						& i
							font-size 100px
							color rgba(255,255,255,.4)
				&-block
					&:nth-child(1)
						flex-basis 100%
					&:nth-child(2)
						flex-basis 50%
					&:nth-child(3)
						flex-basis 50%
					&-title
						font-family $SemiBold
						font-size 1.5rem
						line-height 35px
						color $white
						margin-bottom 15px
					&-number
						font-size 2.25rem
						color $white
						line-height 55px
						font-family $Medium
						margin-bottom 4px
					&-text
						font-size 1.125rem
						line-height 26px
						color $white
						font-family $Regular
						&:last-child
							margin-bottom 0
@media(max-width: 991px)
	.info2-bg
		display none
	.info2
		padding 40px 0
		&__blocks
			flex-wrap wrap
			&-block
				&:nth-child(1)
					flex-basis 100%
				&:nth-child(2)
					flex-basis 100%
