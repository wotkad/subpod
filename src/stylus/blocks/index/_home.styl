.home-bg
	height 600px
	position absolute
	top 0
	left 0
	width 60%
.home-bg2
	position absolute
	height 600px
	top 0
	right 0
	width 40%
	background-color #f7f7f7
.home
	height 600px
	display flex
	&__block
		flex-basis 50%
		justify-content center
		display flex
		flex-direction column
		&-text
			font-size 1.125rem
			line-height 26px
			font-family $Regular
			color $white
			margin-bottom 19px
			margin-top 80px
		&-title
			font-size 1.5rem
			color $white
			font-family $SemiBold
			line-height 35px
			margin-bottom 51px
		&-button
			display flex
			&-item
				font-size 0.75rem
				line-height 18px
				border-radius 5px
				text-transform uppercase
				color $white
				letter-spacing 1px
				font-family $ExtraBold
				padding 16px 47px
				background-color $orange
				box-shadow 0px 10px 15px #0B6AB6
				transition .3s
				&:hover
					box-shadow 0px 0px 20px $orange
		&-image
			opacity 0
			transform rotate(5deg) translateX(10px)
			& img
				width 100%
				z-index 10
@media(max-width: 991px)
	.home-bg
		width 100%
		height 100%
	.home-bg2
		display none
	.home
		height auto
		&__block
			&-title
				margin-bottom 30px
			&:nth-child(1)
				flex-basis 100%
				padding 40px 0
			&:nth-child(2)
				display none
			&-button
				justify-content center
