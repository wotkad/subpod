.info1-bg
	position absolute
	width 100%
	height 100%
	& img
		position absolute
		left 10%
		top 0
.info1
	padding 80px 0
	&__blocks
		display flex
		flex-wrap wrap
		justify-content space-between
		&-block
			opacity 0
			transform translateY(20px)
			&:nth-child(1)
				flex-basis 100%
				border-bottom 1px solid rgba(255, 255, 255, 0.15)
				padding-bottom 30px
			&:nth-child(2)
				margin-top 30px
				flex-basis 45%
			&:nth-child(3)
				margin-top 30px
				flex-basis 45%
			&-title
				font-family $SemiBold
				font-size 1.5rem
				line-height 35px
				color $white
				margin-bottom 30px
			&-text
				& p
					font-family $Regular
					font-size 1.125rem
					line-height 26px
					color $white
					margin-bottom 10px
					display inline-block
				& span
					border-radius 5px
					background-color $blue
					margin 0 3px
					color $white
					padding 5px
					font-family $SemiBold
					font-size 1.125rem
					line-height 26px
			& > div:nth-child(2)
				& p
					margin 0
			&-button
				& div
					font-size 0.75rem
					line-height 18px
					text-transform uppercase
					color $white
					letter-spacing 1px
					font-family $ExtraBold
					padding 16px 73px
					background-color $orange
					border-radius 5px
					display inline-flex
					transition .3s
					&:hover
						box-shadow 0px 0px 20px $orange
					& i
						margin-top 3px
						margin-right 3px
@media(max-width: 991px)
	.info1
		padding 40px 0
		&__blocks
			&-block
				&:nth-child(2)
					flex-basis 100%
				&:nth-child(3)
					flex-basis 100%
				&-button
					display block
					text-align center
